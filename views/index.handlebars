<div id="container">
<h1>burgers!</h1>

<h2>burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    {{burgername}}
  </li>
  <button class="change-devour" data-id="{{id}}" data-newdevour="{{devour}}">
    EAT UP!
  </button>
  {{/unless}}
  {{/each}}
</ul>

<h2>burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>
    {{burgername}}
  </li>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">
  <div class="form-group create-form">
    <div class="row justify-content-center">
      <label for="burgername" class="col-form-label-lg ">
        <h3>Add your own burger!</h3>
      </label>
    </div>
    <div class="col-md-8 offset-md-2 col-sm-12">
      <input type="text" class="form-control form-control-lg text-center" id="burger-name" placeholder="Burger Name">
    </div>
  </div>
  <div class="row justify-content-center">
    <button type="submit" class="btn btn-primary">Add Burger</button>
  </div>
</form>
</form>
</div>